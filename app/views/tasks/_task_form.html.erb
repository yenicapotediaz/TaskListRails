<% if @task.errors.any? %>
  <section>
    <table>
      <tr>
        <th>Field</th>
        <th>Problem</th>
      </tr>
      <% @task.errors.each do |field, problem| %>
        <tr>
          <td><%= field %></td>
          <td><%= problem %></td>
        </tr>
      <% end %>
    </table>
  </section>
<% end %>


<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed %>
  <%= f.check_box :completion_status %>

  <%= f.submit "Submit" %>
<%end%>
